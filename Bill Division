function bonAppetit(bill, k, b) {
    // Write your code here
    
    let sum = 0
    for(let i =0;i<bill.length;i++){
        sum = sum + bill[i];
    }
    let finalsum= (sum - bill[k])
    let div = finalsum/2;

    let results = (div === b) ? console.log("Bon Appetit"): console.log(b-div);      
}
